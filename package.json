{
  "name": "my-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "server",
    "client",
    "electron"
  ],
  "scripts": {
    "install": "concurrently \"yarn install-server\" \"yarn install-client\" \"yarn install-electron\"",
    "install-client": "cd client && yarn",
    "install-server": "cd server && yarn",
    "install-electron": "cd electron && yarn",
    "test-server": "cd server && yarn test",
    "start-client": "cd client && yarn dev",
    "start-server": "cd server && yarn dev",
    "start-electron": "cd electron && yarn dev",
    "start": "concurrently --kill-others-on-fail \"yarn start-server\" \"yarn start-client\" \"yarn start-electron\"",
    "build-client": "cd client && yarn build",
    "build-server": "cd server && yarn build",
    "build-electron": "cd electron && yarn build",
    "build": "concurrently --kill-others-on-fail \"yarn build-client\" \"yarn build-server\" \"yarn build-electron\""
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "concurrently": "^9.2.1",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2"
  }
}
