{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@fs/*": ["src/endpoints/fs/*"],
      "@food/*": ["src/endpoints/open-food-facts/*"],
      "@google/*": ["src/endpoints/google-disk/*"],
      "@user/*": ["src/endpoints/user/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
